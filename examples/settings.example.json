{
  "_description": "Application Features and Settings Configuration",
  "_usage": "Copy this file to settings.json and customize for your needs",
  
  "features": {
    "showRefreshButton": true,
    "showLastUpdated": true,
    "autoRefreshSeconds": 30,
    "showUptimePercentage": true,
    "showUptimeHistory": true,
    "showExportButton": true,
    "showAlertHistoryButton": true
  },
  
  "api": {
    "_description": "Enable/disable individual API endpoints. Dashboard uses embedded data by default.",
    "enableStatusEndpoint": true,
    "enableUptimeEndpoint": true,
    "enableServicesEndpoint": true,
    "enableHeartbeatEndpoint": true,
    "enableAlertEndpoint": true,
    "enableAlertHistoryEndpoint": true,
    "enableTestNotificationEndpoint": false
  },
  
  "alertHistory": {
    "_description": "Alert history API configuration",
    "defaultRecentPeriodHours": 24,
    "defaultLimit": 20
  },
  
  "alertNotifications": {
    "_description": "Dashboard alert notification settings",
    "pollingIntervalSeconds": 10,
    "localStorageKey": "last-alert-timestamp",
    "severityFilter": ["critical", "error", "warning"],
    "_severityFilterNote": "Only show notifications for these severity levels. Options: critical, error, warning, info, success. Empty array [] disables filtering (shows all).",
    "enableToastNotifications": true,
    "enableBrowserNotifications": true
  },
  
  "uptime": {
    "retentionDays": 120,
    "thresholdProfile": "default"
  },
  
  "uptimeThresholds": {
    "_description": "Threshold profiles define uptime percentage ranges and their display",
    
    "default": [
      {
        "name": "excellent",
        "min": 99.5,
        "color": "#10b981",
        "label": "Excellent"
      },
      {
        "name": "good",
        "min": 99.0,
        "color": "#3b82f6",
        "label": "Good"
      },
      {
        "name": "fair",
        "min": 95.0,
        "color": "#f59e0b",
        "label": "Fair"
      },
      {
        "name": "poor",
        "min": 0,
        "color": "#ef4444",
        "label": "Poor"
      }
    ],
    
    "strict": [
      {
        "name": "excellent",
        "min": 99.9,
        "color": "#10b981",
        "label": "Excellent"
      },
      {
        "name": "good",
        "min": 99.5,
        "color": "#3b82f6",
        "label": "Good"
      },
      {
        "name": "fair",
        "min": 80.0,
        "color": "#f59e0b",
        "label": "Fair"
      },
      {
        "name": "poor",
        "min": 0,
        "color": "#ef4444",
        "label": "Poor"
      }
    ],
    
    "relaxed": [
      {
        "name": "healthy",
        "min": 95.0,
        "color": "#10b981",
        "label": "Healthy"
      },
      {
        "name": "degraded",
        "min": 90.0,
        "color": "#f59e0b",
        "label": "Degraded"
      },
      {
        "name": "critical",
        "min": 0,
        "color": "#ef4444",
        "label": "Critical"
      }
    ]
  }
}

