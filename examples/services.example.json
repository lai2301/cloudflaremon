{
  "groups": [
    {
      "id": "production",
      "name": "Production Services",
      "services": ["production-api", "production-database", "production-cache"],
      "uptimeThresholdSet": "strict",
      "stalenessThreshold": 300,
      "auth": {
        "required": true
      },
      "notifications": {
        "enabled": true,
        "channels": ["discord", "pagerduty", "slack"],
        "events": ["down", "up", "degraded"]
      }
    },
    {
      "id": "staging",
      "name": "Staging Environment",
      "services": ["staging-api", "staging-database"],
      "uptimeThresholdSet": "default",
      "stalenessThreshold": 600,
      "auth": {
        "required": true
      },
      "notifications": {
        "enabled": true,
        "channels": ["slack", "telegram"],
        "events": ["down"]
      }
    },
    {
      "id": "infrastructure",
      "name": "Infrastructure",
      "services": ["backup-service", "monitoring-agent"],
      "uptimeThresholdSet": "default",
      "stalenessThreshold": 600,
      "auth": {
        "required": false
      },
      "notifications": {
        "enabled": true,
        "channels": ["email", "discord"],
        "events": ["down", "up"]
      }
    },
    {
      "id": "development",
      "name": "Development",
      "services": ["dev-service", "test-service"],
      "uptimeThresholdSet": "relaxed",
      "stalenessThreshold": 900,
      "auth": {
        "required": false
      },
      "notifications": {
        "enabled": false
      }
    }
  ],
  "services": [
    {
      "id": "production-api",
      "name": "Production API",
      "enabled": true
    },
    {
      "id": "production-database",
      "name": "Production Database",
      "enabled": true,
      "stalenessThreshold": 180,
      "auth": {
        "required": true
      },
      "notifications": {
        "channels": ["pagerduty", "discord"],
        "events": ["down", "up"]
      }
    },
    {
      "id": "production-cache",
      "name": "Production Cache",
      "enabled": true
    },
    {
      "id": "staging-api",
      "name": "Staging API",
      "enabled": true
    },
    {
      "id": "staging-database",
      "name": "Staging Database",
      "enabled": true
    },
    {
      "id": "dev-service",
      "name": "Development Service",
      "enabled": true,
      "notifications": {
        "enabled": true,
        "channels": ["telegram"]
      }
    },
    {
      "id": "test-service",
      "name": "Test Service",
      "enabled": false
    },
    {
      "id": "backup-service",
      "name": "Backup Service",
      "enabled": true,
      "stalenessThreshold": 3600
    },
    {
      "id": "monitoring-agent",
      "name": "Monitoring Agent",
      "enabled": true,
      "auth": {
        "required": true
      },
      "notifications": {
        "channels": ["discord", "webhook"]
      }
    }
  ]
}
