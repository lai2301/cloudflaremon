{
  "groups": [
    {
      "id": "core-services",
      "name": "Core Services",
      "services": ["service-1"],
      "uptimeThresholdSet": "strict",
      "stalenessThreshold": 300,
      "notifications": {
        "enabled": true,
        "channels": ["telegram"],
        "events": ["down", "up", "degraded"]
      }
    },
    {
      "id": "infrastructure",
      "name": "Infrastructure",
      "services": ["service-2"],
      "uptimeThresholdSet": "default",
      "stalenessThreshold": 300,
      "notifications": {
        "enabled": true,
        "channels": ["discord", "pagerduty"],
        "events": ["down", "up", "degraded"]
      }
    }
  ],
  "services": [
    {
      "id": "service-1",
      "name": "Internal API",
      "enabled": true
    },
    {
      "id": "service-2",
      "name": "Database Service",
      "enabled": true,
      "notifications": {
        "enabled": false
      }
    }
  ]
}

